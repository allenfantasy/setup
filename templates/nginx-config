upstream %APP_NAME% {
  server 127.0.0.1:%PORT%;
}

server {
  listen 80;
  #server_name ....
  #access_log ....
  #error_log ....

  set $public /home/deployers/%PUBLIC_PATH%

  location ~ ^/(images/|img/|javascript/|js/|css/|stylesheets/|flash/|media/|static/|robots.txt|human.txt|favicon.ico)$ {
    root $public;
    access_log off;
    expires max;
  }

  location / {
    #this is the ip:port where your node app runs
    #root /home/deployer/apps/%APP_NAME%;

    # index files
    #index index.html index.htm;

    proxy_redirect off;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;
    proxy_set_header X-NginX-Proxy true;
    proxy_pass http://%APP_NAME%;
  }
}
